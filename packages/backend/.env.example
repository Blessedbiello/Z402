# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://z402:z402password@localhost:5432/z402_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Zcash Configuration
ZCASH_NETWORK=testnet
ZCASH_RPC_URL=http://localhost:18232
ZCASH_RPC_USER=zcashrpc
ZCASH_RPC_PASSWORD=your-zcash-rpc-password

# API Key Encryption
API_KEY_ENCRYPTION_KEY=your-api-key-encryption-key-change-this-in-production

# Logging
LOG_LEVEL=debug

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Options: sendgrid, aws-ses, smtp, console (console = logs emails instead of sending)
EMAIL_PROVIDER=console
EMAIL_FROM_ADDRESS=noreply@z402.io
EMAIL_FROM_NAME=Z402

# SendGrid (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# AWS SES (if using EMAIL_PROVIDER=aws-ses)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# SMTP (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
